  </div>
  <div class="field">
    <%= f.label :publisher %><br>
    <%= f.text_field :publisher %>
  </div>
  <div class="field">
    <%= f.label :category_branch %><br>
    <%= f.text_field :category_branch, data: {autocomplete_source: categories_path}%>
  </div>
